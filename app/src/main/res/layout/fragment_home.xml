<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/color">

  <!--  <include
        layout="@menu/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
-->





    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <com.brouding.doubletaplikeview.DoubleTapLikeView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:adjustViewBounds="true"
                    app:disableAnimation="false"
                    app:doubleTapIn="200"
                    app:icon="@drawable/ic_heart"
                    app:scaleType="fitCenter"
                    app:src="@drawable/bl" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:id="@+id/sunset"
                    app:srcCompat="@drawable/ic_like" />


                <com.brouding.doubletaplikeview.DoubleTapLikeView
                    android:id="@+id/layout_double_tap_like"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:adjustViewBounds="true"
                    app:disableAnimation="false"
                    app:doubleTapIn="200"
                    app:icon="@drawable/ic_heart"
                    app:scaleType="fitCenter"
                    app:src="@drawable/ken" />


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:srcCompat="@drawable/ic_like" />


                <com.brouding.doubletaplikeview.DoubleTapLikeView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:adjustViewBounds="true"
                    app:disableAnimation="false"
                    app:doubleTapIn="200"
                    app:icon="@drawable/ic_heart"
                    app:src="@drawable/lady" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:srcCompat="@drawable/ic_like" />


                <com.brouding.doubletaplikeview.DoubleTapLikeView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:adjustViewBounds="true"
                    app:disableAnimation="false"
                    app:doubleTapIn="200"
                    app:icon="@drawable/ic_heart"
                    app:src="@drawable/usiku" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:srcCompat="@drawable/ic_like" />


                <com.brouding.doubletaplikeview.DoubleTapLikeView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:adjustViewBounds="true"
                    app:disableAnimation="false"
                    app:doubleTapIn="200"
                    app:icon="@drawable/ic_heart"
                    app:src="@drawable/vans" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:srcCompat="@drawable/ic_like" />


                <com.brouding.doubletaplikeview.DoubleTapLikeView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:adjustViewBounds="true"
                    app:disableAnimation="false"
                    app:doubleTapIn="200"
                    app:icon="@drawable/ic_heart"
                    app:src="@drawable/shad" />


            </LinearLayout>


        </ScrollView>


    </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"

        android:background="@drawable/color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_student" />



    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:searchIcon="@drawable/ic_search_teal_24dp"
        android:iconifiedByDefault="false"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="8dp">

    </SearchView>

</androidx.constraintlayout.widget.ConstraintLayout>